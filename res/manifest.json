{
  "$schema": "http://json.schemastore.org/chrome-manifest",
  "manifest_version": 2,
  "name": "Subadub",
  "description" : "Enhanced Netflix subtitles for foreign language study",
  "version": "0.1.5",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_end",
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    "subadub.css",
    "icon48.png"
  ]
}
